{
  "manifest_version": 2,

  "name": "GIF Saver",
  "description": "Ain't no one got time for bookmarkin' gifs",
  "version": "1.0",

  "permissions": [
    "contextMenus",
    "background",
    "storage"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup":"popup.html",
    "default_title":"View saved gifs"
  },
  "icons": {
    "16":"icon.png"
  },
  "background": {
    "scripts": [
                "jquery.min.js", 
                "jquery-ui.min.js",
                "jQuery.twFile.js",
                "background.js"],
    "persistent" : true
  }
}


